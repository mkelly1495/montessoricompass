        <splash height="1496" src="www/resources/images/ios/launch_image2048x1496.png" width="2048" />
        <splash height="1536" src="www/resources/images/ios/launch_image2048x1536.png" width="2048" />
        <splash height="1334" src="www/resources/images/ios/launch_image750x1334.png" width="750" />
        <splash height="750" src="www/resources/images/ios/launch_image1334x750.png" width="1334" />
