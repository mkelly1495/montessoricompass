        <splash height="748" src="www/resources/images/ios/launch_image1024x748.png" width="1024" />
        <splash height="768" src="www/resources/images/ios/launch_image1024x768.png" width="1024" />
        <splash height="1024" src="www/resources/images/ios/launch_image1024x1024.png" width="1024" />
