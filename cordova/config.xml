<?xml version='1.0' encoding='utf-8'?>
<widget id="org.kelly.MontessoriCompass" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Montessori Compass</name>
    <description>
        An application for viewing Montessori Compass content.
    </description>
    <author email="secondchancesoldier@gmail.com" href="http://chordmaestro.secondchancesoldier.com">
        Michael Kelly
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <preference name="android-targetSdkVersion" value="22" />
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/resources/images/android/icon-ldpi.png" />
        <icon density="mdpi" src="www/resources/images/android/icon-mdpi.png" />
        <icon density="hdpi" src="www/resources/images/android/icon-hdpi.png" />
        <icon density="xhdpi" src="www/resources/images/android/icon-xhdpi.png" />
        <icon density="xxhdpi" src="www/resources/images/android/icon-xxhdpi.png" />
        <icon density="xxxhdpi" src="www/resources/images/android/icon-xxxhdpi.png" />
        <splash density="land-hdpi" src="www/resources/images/android/splash800x480.png" />
        <splash density="land-ldpi" src="www/resources/images/android/splash320x200.png" />
        <splash density="land-mdpi" src="www/resources/images/android/splash480x320.png" />
        <splash density="land-xhdpi" src="www/resources/images/android/splash1280x720.png" />
        <splash density="port-hdpi" src="www/resources/images/android/splash480x800.png" />
        <splash density="port-ldpi" src="www/resources/images/android/splash200x320.png" />
        <splash density="port-mdpi" src="www/resources/images/android/splash320x480.png" />
        <splash density="port-xhdpi" src="www/resources/images/android/splash720x1280.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="www/resources/images/ios/icon29.png" width="29" />
        <icon height="40" src="www/resources/images/ios/icon40.png" width="40" />
        <icon height="58" src="www/resources/images/ios/icon58.png" width="58" />
        <icon height="76" src="www/resources/images/ios/icon76.png" width="76" />
        <icon height="80" src="www/resources/images/ios/icon80.png" width="80" />
        <icon height="120" src="www/resources/images/ios/icon120.png" width="120" />
        <icon height="152" src="www/resources/images/ios/icon152.png" width="152" />
        <icon height="1024" src="www/resources/images/ios/icon1024.png" width="1024" />
        <icon height="50" src="www/resources/images/ios/icon50.png" width="50" />
        <icon height="57" src="www/resources/images/ios/icon57.png" width="57" />
        <icon height="60" src="www/resources/images/ios/icon60.png" width="60" />
        <icon height="72" src="www/resources/images/ios/icon72.png" width="72" />
        <icon height="100" src="www/resources/images/ios/icon100.png" width="100" />
        <icon height="114" src="www/resources/images/ios/icon114.png" width="114" />
        <icon height="144" src="www/resources/images/ios/icon144.png" width="144" />
        <icon height="180" src="www/resources/images/ios/icon180.png" width="180" />
        <splash height="480" src="www/resources/images/ios/launch_image320x480.png" width="320" />
        <splash height="960" src="www/resources/images/ios/launch_image640x960.png" width="640" />
